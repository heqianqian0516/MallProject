<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:orientation="vertical"
       android:layout_width="@dimen/dp_151"
       android:layout_height="@dimen/dp_174">
       <com.facebook.drawee.view.SimpleDraweeView
           android:id="@+id/sdv_image2"
           android:layout_marginBottom="@dimen/sp_12"
           android:layout_margin="@dimen/dp_10"
           android:layout_width="@dimen/dp_131"
           android:layout_height="@dimen/dp_102"
           />
       <TextView
           android:id="@+id/text_name2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="name"
           android:layout_marginLeft="@dimen/dp_15"
           android:textSize="@dimen/sp_12"
           android:textColor="#666666"
           android:ellipsize="end"
           android:singleLine="true"
           />
        <TextView
            android:id="@+id/text_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:text="price"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_10"
            />
   </LinearLayout>
</LinearLayout>