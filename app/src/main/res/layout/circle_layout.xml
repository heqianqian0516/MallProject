<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <LinearLayout
       android:orientation="vertical"
       android:layout_marginLeft="@dimen/dp_24"
       android:background="@drawable/cicle_bg"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginRight="@dimen/dp_24"
       android:layout_marginTop="@dimen/dp_44"
       android:layout_marginBottom="@dimen/dp_10"
       >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <com.facebook.drawee.view.SimpleDraweeView
               android:id="@+id/sdv"
               fresco:roundAsCircle="true"
               android:layout_width="@dimen/dp_50"
               android:layout_height="@dimen/dp_50"
               android:layout_marginTop="@dimen/dp_10"
               android:layout_marginLeft="@dimen/dp_10"
               />
           <TextView
               android:id="@+id/textName"
               android:text="小白妞"
               android:textColor="#666666"
               android:textSize="@dimen/sp_14"
               android:layout_toRightOf="@id/sdv"
               android:layout_marginLeft="16dp"
               android:layout_marginTop="@dimen/dp_20"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:id="@+id/times"
               android:layout_marginRight="@dimen/dp_10"
               android:textSize="@dimen/sp_10"
               android:text="2018-11-13  13:00"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_marginTop="@dimen/dp_15"
               android:textColor="#666666"
               />
       </RelativeLayout>
       <TextView
           android:id="@+id/textTitle"
           android:textSize="@dimen/sp_12"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/dp_10"
           android:text="aaaaa"
           android:textColor="#666666"
           android:layout_marginLeft="@dimen/dp_10"
           />
       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
          <ImageView
              android:id="@+id/img"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/dp_5"
              android:layout_marginRight="@dimen/dp_5"
              />
       </LinearLayout>
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_marginBottom="@dimen/dp_10"
           android:layout_marginTop="@dimen/dp_20"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/img_num"
               android:src="@mipmap/common_btn_prise_n_hdpi"
               android:layout_width="@dimen/dp_20"
               android:layout_height="@dimen/dp_20"
               android:layout_toLeftOf="@id/text_num"
               />
          <!-- <com.zhuang.likeviewlibrary.LikeView
               android:id="@+id/likeView"
               android:src="@mipmap/common_btn_prise_n_hdpi"
               android:layout_width="@dimen/dp_20"
               android:layout_height="@dimen/dp_20"
               android:layout_toLeftOf="@id/text_num"
               app:like_canCancel="true"
               app:like_iconSize="@dimen/dp_25"
               app:like_hasFly="false"
              app:like_textSize="12sp" />-->
            <TextView
               android:id="@+id/text_num"
               android:text="121"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_marginRight="@dimen/dp_24"
              android:layout_marginLeft="@dimen/dp_10"
               />
       </RelativeLayout>
   </LinearLayout>

</LinearLayout>