<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的收货地址"
        android:textSize="@dimen/sp_16"
        android:textColor="#666666"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成"
        android:textSize="@dimen/sp_12"
        android:textColor="#666666"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_42"
        android:id="@+id/activity_myaddress_text_finish"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="@dimen/dp_312"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@id/activity_myaddress_text_finish"
        android:layout_above="@id/activity_myaddress_btn_add"
        android:id="@+id/activity_myaddress_recyclerview_address"></android.support.v7.widget.RecyclerView>

    <Button
        android:layout_width="@dimen/dp_116"
        android:layout_height="@dimen/dp_30"
        android:text="新增收货地址"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_12"
        android:background="@drawable/shape_add_addr"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/activity_myaddress_btn_add"/>
</RelativeLayout>