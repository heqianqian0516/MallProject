<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    tools:context=".PersonalDataActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的资料"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/text_color_six"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_40"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_150"
        android:layout_gravity="center"
        android:padding="@dimen/dp_20"
        android:background="@drawable/cicle_bg"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的头像"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_color_six"
            app:layout_constraintLeft_toLeftOf="parent"

            />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/userPicture"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            app:roundAsCircle="true"
            app:layout_constraintRight_toRightOf="parent"
            app:actualImageScaleType="centerCrop"
            app:roundingBorderColor="#fff3cf44"
            app:fadeDuration="3000"
            app:roundingBorderWidth="2dp"/>

        <View
            android:id="@+id/icon_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/shape_text_mine"
            app:layout_constraintTop_toBottomOf="@id/userPicture"

            />
        <TextView
            android:id="@+id/myName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的昵称"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_color_six"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@id/icon_view"
            android:layout_marginTop="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:text="我是狂吃不胖的小姐姐"
            android:textSize="@dimen/sp_12"
            android:textColor="#999999"
            app:layout_constraintBottom_toBottomOf="@id/viewTwo"
            app:layout_constraintTop_toBottomOf="@id/icon_view"
            />
        <View
            android:id="@+id/viewTwo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/shape_text_mine"
            app:layout_constraintTop_toBottomOf="@id/myName"
            android:layout_marginTop="@dimen/dp_10"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的密码"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_color_six"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@id/viewTwo"
            android:layout_marginTop="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/myPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:text="这是密码"
            app:layout_constraintBottom_toBottomOf="@id/myPassword"
            />
        <View
            android:id="@+id/viewThree"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/shape_text_mine"
            app:layout_constraintTop_toBottomOf="@id/myPassword"
            android:layout_marginTop="@dimen/dp_10"
            />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>